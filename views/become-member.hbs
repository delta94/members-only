<form action="" method="POST">
    <label>To become a Member of this exclusive club, you must enter the password</label>
    <input type="password" name="password" required>
    <button>Obtain Membership</button>
</form>
{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{msg}}</li>
    {{/each}}
</ul>
{{/if}}