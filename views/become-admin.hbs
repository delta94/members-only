{{#if currentUser.member}}
<form action="" method="POST">
    <label for="password">Enter the password to become an Admin:</label>
    <input type="password" name="password" required>
    <button>Become an Admin</button>
</form>
{{else}}
<p>To become an Admin, you first have to become a Member</p>
{{/if}}
{{#if errors}}
    <ul>
        {{#each errors}}
        <li>{{msg}}</li>
        {{/each}}
    </ul>
{{/if}}