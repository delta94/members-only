<form action="" method="POST" class="form">
    <label class="label" for="username">Username:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="text" name="username" required minlength="5">
    <label class="label" for="password">Password:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="password" name="password" required minlength="6">
    <button class="form-button">Log in</button>
</form>
{{#if errors}}
<ul class="form-errors">
    {{#each errors}}
    <li class="text-center">{{msg}}</li>
    {{/each}}
</ul>
{{/if}}