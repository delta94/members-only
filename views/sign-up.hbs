<form action="" method="POST" class="flex flex-col max-w-md mx-auto my-6 bg-teal-600 py-6 px-10 rounded shadow-lg">
    <label class="font-bold text-gray-200 text-lg py-4" for="first_name">First Name:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="text" name="first_name" required minlength="2">
    <label class="font-bold text-gray-200 text-lg py-4" for="last_name">Last Name:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="text" name="last_name" required minlength="2">
    <label class="font-bold text-gray-200 text-lg py-4" for="username">Username:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="text" name="username" required minlength="5">
    <label class="font-bold text-gray-200 text-lg py-4" for="password">Password:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="password" name="password" required minlength="6">
    <label class="font-bold text-gray-200 text-lg py-4" for="confirm_password">Confirm Password:</label>
    <input class="p-2 rounded focus:bg-gray-300" type="password" name="confirm_password" required minlength="6">
    <button class="bg-white text-gray-200 mt-8 p-3 rounded w-32 mx-auto text-teal-700 font-bold">Sign up</button>
</form>
{{#if errors}}
<ul class="form-errors">
    {{#each errors}}
    <li class="text-center">{{msg}}</li>
    {{/each}}
</ul>
{{/if}}