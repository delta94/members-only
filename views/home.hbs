{{#if currentUser}}
<h2 class="font-bold text-teal-700 text-2xl mt-6 mb-3">
    Hello {{currentUser.full_name}} &ThickSpace; &mdash; &ThickSpace;
    {{#if currentUser.admin}}
    Status: <span class="text-gray-900">Admin</span>
    {{else}}
    {{#if currentUser.member}}
    Status: <span class="text-purple-900">Member</span>
    {{else}}
    Status: <span class="text-gray-900">Poor Wayfaring Stranger</span>
    {{/if}}
    {{/if}}
</h2>
{{/if}}
<section class="comments">
    {{#each comments}}
        <article class="rounded overflow-hidden shadow-lg p-5 my-6 bg-teal-600">
            <h2 class="font-bold py-2 text-4xl">{{title}}</h2>
            <p class="py-3 text-3xl text-white">{{text}}</p>
            {{#if @root.currentUser.member}}
                <p class="font-bold text-sm text-gray-800 mb-2">Posted by: {{user.full_name}}
                    {{#if user.admin}}
                    &mdash; <span class="text-gray-900">Admin</span>
                    {{/if}}
                </p>
                <p class="font-bold text-xs text-gray-800"><small>{{timestamp}}</small></p>
            {{else}}
                <p class="font-bold text-xs text-gray-800">Become a member to see who posted this message.</p>
            {{/if}}
            {{#if @root.currentUser.admin}}
                <button class="bg-red-500 p-2 mt-4 rounded"><a class="text-white font-bold" href="/home/{{id}}/delete">Delete</a></button>
            {{/if}}
        </article>
    {{/each}}
</section>
