{{#if currentUser}}
    <h2>Create your message</h2>
    <form action="" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" required minlength="3" value="{{header}}">
        <label for="comment">Comment:</label>
        <textarea name="comment" cols="30" rows="10">{{comment}}</textarea>
        <button>Post message</button>
    </form>
    {{#if errors}}
    <ul>
        {{#each errors}}
        <li>{{msg}}</li>
        {{/each}}
    </ul>
{{/if}}
{{else}}
    <p>You need to be logged in to post a new message</p>
{{/if}}
